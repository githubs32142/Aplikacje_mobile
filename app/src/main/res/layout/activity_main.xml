<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.apk001.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/tytul"
        android:textSize="24sp"
        android:typeface="sans"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bs1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/nb1"
        android:onClick="bs1Click"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/h1"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/bs1"
        app:layout_constraintRight_toRightOf="@+id/bs1"
        app:layout_constraintTop_toBottomOf="@+id/bs1" />

    <Button
        android:id="@+id/bs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="0dp"
        android:text="@string/nb2"
        android:onClick="bs2Click"
        app:layout_constraintLeft_toRightOf="@+id/editText"
        app:layout_constraintTop_toTopOf="@+id/editText" />

    <Button
        android:id="@+id/bAktuwnosc2"
        android:layout_width="190dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/nb3"
        app:layout_constraintEnd_toEndOf="@+id/bs1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/eImie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/h2"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/bAktuwnosc2"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="@+id/bAktuwnosc2"
        app:layout_constraintTop_toBottomOf="@+id/bAktuwnosc2" />

    <Button
        android:id="@+id/btwa3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nb4"
        app:layout_constraintBottom_toBottomOf="@+id/eImie"
        app:layout_constraintEnd_toEndOf="@+id/bs2"
        app:layout_constraintStart_toStartOf="@+id/bs2"
        app:layout_constraintTop_toTopOf="@+id/eImie" />
</android.support.constraint.ConstraintLayout>
